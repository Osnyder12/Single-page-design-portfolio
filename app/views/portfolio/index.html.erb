      </div>
      <!-- Item 3 -->
      <div class="duration-700 ease-in-out" data-carousel-item>
        <%= image_tag('image-slide-1.jpg', class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2") %>
      </div>
      <!-- Item 4 -->
      <div class="duration-700 ease-in-out" data-carousel-item>
        <%= image_tag('image-slide-1.jpg', class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2") %>
      </div>
      <!-- Item 5 -->
      <div class="duration-700 ease-in-out" data-carousel-item>
        <%= image_tag('image-slide-1.jpg', class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2") %>
      </div>
    </div>
  </div>

  <!-- Slider indicators -->
  <div class="flex flex-row items-center justify-center max-w-4xl gap-10 mx-auto md:gap-16 md:space-x-6">
